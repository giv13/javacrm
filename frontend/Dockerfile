FROM node:24.0.1-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY public public
COPY src src
COPY *.?s* index.html ./
ARG VITE_API_BASE_URL
RUN npm run build

FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 9000

CMD ["nginx", "-g", "daemon off;"]
